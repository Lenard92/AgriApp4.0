<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GripOpGras.Views.LoginPage">
    <StackLayout x:Name="MasterLayout">
        
        <StackLayout x:Name="LogoStack" VerticalOptions="FillAndExpand">
            <Image x:Name="LogInIcon" Source="LoginIcon.png" Margin="0,80,0,0"/>
        </StackLayout>

      
         
        
            <ActivityIndicator x:Name="ActivitySpinner" Color="Red" IsRunning="true" />

            <Label x:Name="Lbl_Username" Text="Gebruikersnaam"/>
            <Entry x:Name="Entry_Username" Placeholder="Voer hier uw gebruikersnaam in"/>
            <Label x:Name="Lbl_Password" Text="wachtwoord"/>
            <Entry x:Name="Entry_Password" Placeholder="voer hier uw wachtwoord in"/>
            <Button x:Name="Btn_Signin" Text="log in" Clicked="SignInProcedure"/>
        
        
    </StackLayout>
</ContentPage>